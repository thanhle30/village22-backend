@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h1 class="mb-2">Change Password</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="ChangePassword" asp-controller="User">
    <input asp-for="Username" value="@User.Identity.Name" hidden />
    <div class="form-group row">
        <div class="col-sm-2"><label>Old Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="OldPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>New Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="NewPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Confirm New Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Change Password</button>
            <button asp-controller="User" asp-action="Index" class="btn btn-secondary">Back</button>
        </div>
    </div>
</form>
